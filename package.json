    "@babel/preset-typescript": "^7.10.4",
    "@babel/register": "^7.11.5",
    "@types/jest": "^26.0.14",
    "@types/supertest": "^2.0.10",
    "jest": "^26.5.3",
    "nodemon": "^2.0.4",
    "regenerator-runtime": "^0.13.7",
    "supertest": "^5.0.0"
  },
  "jest": {
    "testEnvironment": "node"
  }
