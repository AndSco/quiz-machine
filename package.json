    "@types/express": "^4.17.8",
    "@types/express-session": "^1.17.0",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.6.4",
    "@types/passport-local-mongoose": "^4.0.13",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
