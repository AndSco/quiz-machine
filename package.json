{
  "name": "quiz-machine",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "ts:watch": "tsc -w",
    "ts:build": "tsc",
    "develop": "tsc && nodemon dist/app.js",
    "serve": "nodemon dist/app.js",
    "watch": "concurrently \"npm run ts:watch\" \"npm run serve\"",
    "build": "npm run ts:build",
    "prod:serve": "node dist/start.js",
    "start": "npm run build && npm run prod:serve",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "heroku-postbuild": "cd client && npm install && npm run build",
    "test": "NODE_ENV=test jest -- src/__tests__",
    "test:watch-server": "NODE_ENV=test jest --watchAll -- src/__tests__",
    "test:database": "NODE_ENV=test jest --watchAll -- src/__tests__/database"
  },
  "author": "",
  "license": "ISC",
